<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentTop="true"/>

        <!--<ImageView
            android:id="@+id/jd_Employer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jd_employer_name"
            android:layout_below="@id/jd_title"
            android:layout_alignParentLeft="true"
            android:paddingLeft="50dp"
            android:layout_alignParentStart="true"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />

        <!--<ImageView
            android:id="@+id/jd_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jd_employee_name"
            android:layout_below="@id/jd_title"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:layout_alignParentEnd="true"
            android:paddingEnd="50dp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/jd_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/jd_employer_name"
            android:paddingTop="100dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/jd_payrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/jd_employer_name"
            android:paddingTop="100dp"
            android:layout_alignLeft="@id/jd_location"
            android:layout_alignStart="@id/jd_location"
            android:paddingRight="70dp"
            android:paddingEnd="70dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/jd_brif_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/jd_payrate"
            android:paddingTop="70dp"
            android:layout_centerInParent="true"/>

        <!--
        <EditText
            android:id="@+id/jd_posted_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
         -->

        <!--
        <EditText
            android:id="@+id/jd_occur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        -->




        <TextView
            android:id="@+id/jd_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/jd_brif_des"
            android:paddingTop="50dp"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/id_apply"
            android:paddingTop="20dp"
            android:layout_below="@id/jd_state"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>