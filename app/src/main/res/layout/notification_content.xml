<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="0dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/employerinfobox_notification"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="13dp"
        android:background="#B1AFAF"
        android:minHeight="120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B1AFAF"
            android:textColor="#000000"
            android:text="@string/notification"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#B1AFAF"
            android:layout_marginTop="40dp"
            android:layout_gravity="left"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/jobtitle_notification"
                android:text="@string/jobtitle_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textSize="15.5sp" />

            <TextView
                android:id="@+id/location_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="@string/location_notification" />

            <Button
                android:id="@+id/deletenotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="-200dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/delete_notification"
                android:textColor="#000000"
                android:textSize="13sp" />

            <Button
                android:id="@+id/reviewjobnotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="-200dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/review_jobs_notification"
                android:textColor="#000000"
                android:textSize="13sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
